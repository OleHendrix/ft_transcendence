generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Account {
  username    String     @id @unique
  email       String     @unique
  password    String
  totpSecret String?
  wins        Int        @default(0)
  draws       Int        @default(0)
  loses       Int        @default(0)
  online      Boolean    @default(false)

  Blocks                Block[]          @relation("Blocks")
  BlockedBy             Block[]          @relation("BlockedBy")
  sentMessages          Message[]        @relation("SentMessages")     // This represents the sender
  receivedMessages      Message[]        @relation("ReceivedMessages") // This represents the receiver
  account1ChatSessions  ChatSession[]    @relation("account1ChatSessions")
  account2ChatSessions  ChatSession[]    @relation("account2ChatSessions")
}

model Message {
  id           		Int      @id @default(autoincrement())
  content       	String
  timestamp     	DateTime @default(now())
  senderUsername  	String
  receiverUsername 	String
  chatSessionId 	Int

  chatSession   ChatSession   @relation(fields: [chatSessionId], references: [id])
  sender        Account       @relation("SentMessages", fields: [senderUsername], references: [username])
  receiver      Account       @relation("ReceivedMessages", fields: [receiverUsername], references: [username])
}

model ChatSession {
  id        	Int      @id @default(autoincrement())
  username1		String
  username2		String
  createdAt 	DateTime @default(now())
  messages  	Message[]

  account1   Account  @relation("account1ChatSessions", fields: [username1], references: [username])
  account2   Account  @relation("account2ChatSessions", fields: [username2], references: [username])
}

model Block {
  id         		Int      @id @default(autoincrement())
  blockerUsername   String
  blockedUsername   String

  blocker     Account  @relation("Blocks", fields: [blockerUsername], references: [username])
  blocked     Account  @relation("BlockedBy", fields: [blockedUsername], references: [username])
  createdAt   DateTime @default(now())
}
